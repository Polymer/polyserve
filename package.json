{
  "name": "polyserve",
  "version": "0.14.0",
  "description": "A simple dev server for bower components",
  "license": "BSD-3-Clause",
  "repository": "PolymerLabs/polyserve",
  "main": "./lib/polyserve.js",
  "bin": {
    "polyserve": "bin/polyserve"
  },
  "scripts": {
    "start": "./bin/polyserve",
    "clean": "mkdir -p lib && rm -r lib",
    "build": "npm run clean && tsc",
    "test": "npm run build && mocha",
    "test:watch": "watchy -w src/ -- npm test",
    "format": "find src test | grep '\\.js$\\|\\.ts$' | xargs clang-format --style=file -i"
  },
  "keywords": [
    "polymer",
    "polyserve"
  ],
  "dependencies": {
    "@types/express": "^4.0.33",
    "@types/mime": "0.0.29",
    "@types/mz": "0.0.29",
    "@types/node": "^4.0.30",
    "@types/opn": "^3.0.28",
    "@types/serve-static": "^1.7.31",
    "command-line-args": "^3.0.1",
    "command-line-usage": "^3.0.3",
    "express": "^4.8.5",
    "find-port": "^1.0.1",
    "mime": "^1.3.4",
    "mz": "^2.4.0",
    "opn": "^3.0.2",
    "pem": "^1.8.3",
    "resolve": "^1.0.0",
    "send": "^0.10.1",
    "spdy": "^3.3.3"
  },
  "devDependencies": {
    "@types/assert": "0.0.29",
    "@types/chai": "^3.4.34",
    "@types/chai-as-promised": "0.0.29",
    "@types/mocha": "^2.2.33",
    "@types/sinon": "^1.16.31",
    "@types/supertest": "^1.1.31",
    "@types/tmp": "0.0.31",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "clang-format": "=1.0.45",
    "mocha": "^3.1.0",
    "sinon": "^1.17.5",
    "source-map-support": "^0.4.6",
    "supertest": "^1.2.0",
    "tmp": "0.0.28",
    "typescript": "^2.0.3",
    "watchy": "^0.6.6"
  },
  "typings": "./lib/polyserve.d.ts"
}
